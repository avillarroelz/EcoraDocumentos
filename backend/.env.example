# Puerto del servidor
PORT=3001

# Entorno (development, production)
NODE_ENV=development

# CORS - Orígenes permitidos (separados por comas)
# En producción, agregar la URL de Netlify/Vercel
CORS_ORIGIN=http://localhost:3000,http://localhost:8100,https://tu-app.netlify.app

# Logging
LOG_LEVEL=dev

# Google Drive API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3001/api/google/callback

# Session Secret (para almacenar tokens temporalmente)
SESSION_SECRET=your_random_secret_key_here
